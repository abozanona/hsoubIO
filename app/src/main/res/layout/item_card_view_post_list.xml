<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/item_card_view_post_list">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgUserImg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    android:contentDescription="@string/rand_none"
                    android:layout_gravity="center_vertical"
                    android:background="#CCCCCC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lblTopicTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rand_h4"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:maxLines="4"/>
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lblUserName"
                            android:gravity="bottom|start"
                            android:textAlignment="textStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/user"
                            android:drawableLeft="@android:drawable/ic_lock_idle_low_battery"
                            android:text="@string/rand_h6"
                            android:ellipsize="end"
                            android:maxLines="1"/>
                        <TextView
                            android:id="@+id/lblTopicType"
                            android:gravity="bottom|start"
                            android:textAlignment="textStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/align_left"
                            android:drawableLeft="@drawable/align_left"
                            android:text="@string/rand_h6"
                            android:ellipsize="end"
                            android:maxLines="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lblCommentsNumber"
                            android:gravity="bottom|start"
                            android:textAlignment="textStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/comment2"
                            android:drawableLeft="@drawable/comment2"
                            android:text="@string/rand_h6"
                            android:ellipsize="end"
                            android:maxLines="1"/>
                        <TextView
                            android:id="@+id/lblTime"
                            android:gravity="bottom|start"
                            android:textAlignment="textStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/clock"
                            android:drawableLeft="@drawable/clock"
                            android:text="@string/rand_time"
                            android:ellipsize="end"
                            android:maxLines="1"/>
                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>